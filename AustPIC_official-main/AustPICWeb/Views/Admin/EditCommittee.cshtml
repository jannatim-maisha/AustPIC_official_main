@model AustPIC.Models.CommitteeModel

@{
    ViewData["Title"] = "EditCommittee";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="p-5 col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <h1>Edit Committee</h1>

    <h4>Committee</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditCommittee">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(Model => Model.CommitteeId)
                <div class="form-group">
                    <label asp-for="CommitteeName" class="control-label"></label>
                    <input asp-for="CommitteeName" class="form-control" />
                    <span asp-validation-for="CommitteeName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CommitteePosition" class="control-label"></label>
                    <input asp-for="CommitteePosition" class="form-control" />
                    <span asp-validation-for="CommitteePosition" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CommitteeStatus" class="control-label"></label>
                    <input asp-for="CommitteeStatus" class="form-control" />
                    <span asp-validation-for="CommitteeStatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CommitteeImg" class="control-label"></label>
                    <input asp-for="CommitteeImg" class="form-control" />
                    <span asp-validation-for="CommitteeImg" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CommitteeDetails" class="control-label"></label>
                    <input asp-for="CommitteeDetails" class="form-control" />
                    <span asp-validation-for="CommitteeDetails" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CommitteeYear" class="control-label"></label>
                    <input asp-for="CommitteeYear" class="form-control" />
                    <span asp-validation-for="CommitteeYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CommitteeSemester" class="control-label"></label>
                    <input asp-for="CommitteeSemester" class="form-control" />
                    <span asp-validation-for="CommitteeSemester" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CommitteeFacebook" class="control-label"></label>
                    <input asp-for="CommitteeFacebook" class="form-control" />
                    <span asp-validation-for="CommitteeFacebook" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CommitteeEmail" class="control-label"></label>
                    <input asp-for="CommitteeEmail" class="form-control" />
                    <span asp-validation-for="CommitteeEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="GetAllCommittee">Back to List</a>
    </div>
</main>
