<div class="container mt-5" data-aos="fade-up">
    <div class="row g-5" data-aos="fade-up" data-aos-delay="200">
        <div class="col-md-10">
            <article class="">
                <h2 class="mb-1">@Model.BlogTitle</h2>
                <p class="">@Model.BlogDate by <a href="#">@Model.BlogAuthor</a></p>
                <p class=""><span class="rounded bg-success py-1 px-2 text-white">@Model.BlogCatergory</span><span class="py-1 px-2">@Model.BlogView Views</span></p>
                <p id="keywordsContainer"></p>
                <p>@Model.BlogShort</p>
                <hr>
                <div class="blog-content1" data-blog-body="@Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.BlogBody))">
                </div>
                <div class="blog-content" data-blog-body="@Model.BlogBody" style="display: none;">
                </div>

            </article>

            <nav class="blog-pagination" aria-label="Pagination">
                <a class="btn btn-outline-primary rounded-pill" href="#">Older</a>
                <a class="btn btn-outline-secondary rounded-pill disabled">Newer</a>
            </nav>

        </div>

        <div class="col-md-2">
            <div class="position-sticky mt-2 pt-5 pb-3" style="top: 2rem;">
                <div class="p-4 mb-3 bg-light rounded">
                    @*<h4 class="fst-italic">About</h4>*@
                    @*<p class="mb-0"></p>*@
                    <div class="pt-4">
                        <h4 class="fst-italic">Archives</h4>
                        <ol class="list-unstyled mb-0">
                            @foreach (var item in ViewBag.Date)
                            {
                                <li><a asp-controller="Blog" asp-action="Index" asp-route-date="@item">@item</a></li>
                            }
                        </ol>
                    </div>

                    <div class="pt-4">
                        <h4 class="fst-italic">Categories</h4>
                        <ol class="list-unstyled">
                            @foreach (var item in ViewBag.Category)
                            {
                                <li><a asp-controller="Blog" asp-action="Index" asp-route-category="@item">@item</a></li>
                            }
                        </ol>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
