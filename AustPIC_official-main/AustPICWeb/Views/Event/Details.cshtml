<section class="inner-page">
    <div class="container">
        <div class="row mb-4">
            <h1 class="card-title">@Model.EventTitle</h1>
        </div>
        <div class="row mb-4">
            <div class="col-sm-9">
                    <img class="card-img-top rounded-3" src="~/@Model.EventImg" alt="Card image cap">
            </div>
            <div class="col-sm-3 mt-3 mt-sm-0">
                Event Status :
                @if (DateTime.Now <= Model.EventStart)
                {
                    <small class="rounded bg-success text-light p-1">Upcoming</small>
                }
                else if (DateTime.Now >= Model.EventStart && DateTime.Now <= Model.EventEnd)
                {
                    <small class="rounded bg-info text-light p-1">Ongoing</small>
                }
                else
                {
                    <small class="rounded bg-secondary text-light p-1">Ended</small>
                }
                <p class="mt-3">Event Start : @Model.EventStart </p>
                <p>Event End : @Model.EventEnd </p>
                <a href="#" class="blog-button">Going To Event</a>
            </div>

        </div>
        <div class="row mb-4">
            <p class="card-text">@Model.EventDesc</p>
        </div>
    </div>
</section>

